<div class="container">

  <p id="notice"><%= notice %></p>

  <h1 class="text-center">Restaurants</h1> <%= link_to new_restaurant_path, class: "btn btn-primary mb-3" do %>
  <i class="fas fa-plus-square"></i>
  <% end %>

  <table class="table table-dark table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Address</th>
        <th>Phone number</th>
        <th>Category</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @restaurants.each do |restaurant| %>
        <tr>
          <td><%= restaurant.name %></td>
          <td><%= restaurant.address %></td>
          <td><%= restaurant.phone_number %></td>
          <td><%= restaurant.category %></td>
          <td>
            <%= link_to restaurant, class: "btn btn-primary" do %>
              <i class="fas fa-eye"></i>
            <% end %>
          </td>
          <td>
            <%= link_to edit_restaurant_path(restaurant), class: "btn btn-success" do %>
              <i class="fas fa-edit"></i>
            <% end %>
          </td>
          <td>
            <%= link_to restaurant, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <br>
</div>
